function AvatarsPanel() {
  const [selectedProfile, setSelectedProfile] = useState<string>("all");
  const filters = [{ id: "all", name: "All" }, ...avatarProfiles];
  const looksToDisplay =
    selectedProfile === "all"
      ? avatarLooks
      : avatarLooks.filter((look) => look.ownerId === selectedProfile);

  return (
    <div className="flex h-full flex-col overflow-hidden bg-[#0f0f10]">
      <div className="mx-auto flex h-full w-full max-w-5xl flex-col gap-8 px-6 py-8">
        <div className="flex flex-wrap items-start justify-between gap-4">
          <div>
            <p className="text-xs uppercase tracking-[0.4em] text-slate-500">
              Assets
            </p>
            <h1 className="mt-2 text-3xl font-semibold text-white">Avatars</h1>
            <p className="text-slate-400">
              Create reusable identities and looks for every scene.
            </p>
          </div>
          <Button className="bg-blue-600 hover:bg-blue-500 text-white">
            <Plus className="w-4 h-4 mr-2" />
            Create avatar
          </Button>
        </div>

        <Tabs defaultValue="my" className="w-full">
          <TabsList className="w-fit rounded-full border border-white/10 bg-white/5 p-1">
            <TabsTrigger value="my" className="rounded-full px-6 text-sm">
              My Avatars
            </TabsTrigger>
            <TabsTrigger value="public" className="rounded-full px-6 text-sm">
              Public Avatars
            </TabsTrigger>
          </TabsList>

          <TabsContent value="my" className="mt-6 space-y-6">
            <div className="flex gap-4 overflow-x-auto pb-2">
              {filters.map((profile) => {
                const isActive = selectedProfile === profile.id;
                return (
                  <button
                    key={profile.id}
                    onClick={() => setSelectedProfile(profile.id)}
                    className={cn(
                      "flex flex-col items-center gap-2 text-sm text-slate-400 transition-colors",
                      isActive && "text-white"
                    )}
                  >
                    <div
                      className={cn(
                        "h-16 w-16 rounded-full border border-white/10 p-0.5",
                        isActive &&
                          "border-blue-500 shadow-[0_0_0_3px_rgba(37,99,235,0.35)]"
                      )}
                    >
                      {profile.image ? (
                        <img
                          src={profile.image}
                          alt={profile.name}
                          className="h-full w-full rounded-full object-cover"
                          loading="lazy"
                        />
                      ) : (
                        <div className="flex h-full w-full items-center justify-center rounded-full bg-white/5 text-sm font-semibold text-white">
                          All
                        </div>
                      )}
                    </div>
                    <span>{profile.name}</span>
                  </button>
                );
              })}
            </div>

            <div>
              <p className="text-xs uppercase tracking-[0.4em] text-slate-500">
                All avatar looks
              </p>
              <div className="mt-4 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
                <button className="relative flex h-72 flex-col items-center justify-center rounded-[28px] border border-dashed border-white/15 bg-gradient-to-br from-white/5 to-transparent text-white transition hover:border-white/30">
                  <span className="mb-3 flex h-12 w-12 items-center justify-center rounded-full border border-white/20 bg-white/10">
                    <Plus className="h-5 w-5" />
                  </span>
                  <span className="text-lg font-semibold">Create new</span>
                  <p className="mt-1 px-6 text-center text-sm text-slate-400">
                    Start a fresh identity from your reference photos.
                  </p>
                </button>
                {looksToDisplay.map((look) => (
                  <div
                    key={look.id}
                    className="flex flex-col rounded-[28px] border border-white/5 bg-[#151618] p-4"
                  >
                    <div className="relative h-56 w-full overflow-hidden rounded-3xl">
                      <img
                        src={look.image}
                        alt={look.title}
                        className="h-full w-full object-cover"
                        loading="lazy"
                      />
                      <div className="absolute inset-0 bg-gradient-to-t from-black/70 via-black/0" />
                      <Button className="absolute bottom-4 left-1/2 -translate-x-1/2 rounded-full bg-blue-600 px-5 text-sm hover:bg-blue-500">
                        Review new look
                      </Button>
                    </div>
                    <div className="mt-4 flex-1">
                      <p className="text-xs uppercase tracking-[0.4em] text-slate-500">
                        {look.mood}
                      </p>
                      <h3 className="mt-1 text-lg font-semibold text-white">
                        {look.title}
                      </h3>
                      <p className="text-sm text-slate-400">{look.description}</p>
                    </div>
                  </div>
                ))}
              </div>
            </div>
          </TabsContent>

          <TabsContent value="public" className="mt-6">
            <div className="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
              {communityAvatars.map((avatar) => (
                <div
                  key={avatar.id}
                  className="overflow-hidden rounded-[28px] border border-white/5 bg-[#151618]"
                >
                  <div className="h-56 w-full">
                    <img
                      src={avatar.image}
                      alt={avatar.title}
                      className="h-full w-full object-cover"
                      loading="lazy"
                    />
                  </div>
                  <div className="space-y-2 p-4">
                    <p className="text-xs uppercase tracking-[0.4em] text-slate-500">
                      {avatar.creator}
                    </p>
                    <h3 className="text-lg font-semibold text-white">
                      {avatar.title}
                    </h3>
                    <Button
                      variant="outline"
                      className="w-full rounded-full border-white/10 bg-transparent text-white hover:bg-white/10"
                    >
                      Use template
                    </Button>
                  </div>
                </div>
              ))}
            </div>
          </TabsContent>
        </Tabs>
      </div>
    </div>
  );
}
